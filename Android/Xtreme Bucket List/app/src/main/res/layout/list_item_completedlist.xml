<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/layout_photo"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sample_complete"/>
            <ProgressBar
                android:id="@+id/progress_file"
                style="@style/CenterProgressBarStyle"
                android:visibility="gone"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/layout_photo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jump off a Cliff"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lines="1"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/txt_desc"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"
                android:text="Accomplished"
                android:textColor="@color/gray"
                android:textSize="15sp"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/layout_photo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red_light"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_recycler"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_recycle_white"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</LinearLayout>