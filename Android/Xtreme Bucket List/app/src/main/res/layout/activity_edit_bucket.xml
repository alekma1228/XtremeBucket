<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_color">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_button_margin_left"/>
        <ImageView
            android:id="@+id/btn_done"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_done"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/back_button_margin_left"
            android:layout_alignParentRight="true"/>
        <com.brainyapps.xtremebucketlist.utility.CustomeTextView
            android:id="@+id/lbl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Edit List Item"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <EditText
                android:id="@+id/txt_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray_boarder"
                android:hint="Enter Your Goal Here"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/black"
                android:lines="1"
                android:singleLine="true"/>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/bg_white_gray_boarder_no_padding">
                <ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ProgressBar
                    android:id="@+id/progress_file"
                    style="@style/CenterProgressBarStyle"
                    android:visibility="gone"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/txt_detail"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/bg_white_gray_boarder"
                android:hint="Enter Your Details"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="top"/>
            <EditText
                android:id="@+id/txt_note"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/bg_white_gray_boarder"
                android:hint="Enter Your Note Here"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="top"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
