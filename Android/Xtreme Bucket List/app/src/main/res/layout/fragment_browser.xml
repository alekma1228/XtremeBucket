<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_color">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green">
        <com.brainyapps.xtremebucketlist.utility.CustomeTextView
            android:id="@+id/lbl_title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Browser"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_google"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray_boarder">
                <ImageView
                    android:id="@+id/img_search"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/img_mic"
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mic"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
                <EditText
                    android:id="@+id/txt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_toEndOf="@id/img_search"
                    android:layout_toStartOf="@id/img_mic"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:lines="1"
                    android:imeOptions="actionSearch"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/tab_all"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/txt_tab_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALL"
                    android:textSize="16sp"
                    android:textColor="@color/blue_dark"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"/>
                <View
                    android:id="@+id/view_all"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/blue_dark"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tab_images"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/txt_tab_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMAGES"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"/>
                <View
                    android:id="@+id/view_images"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tab_maps"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/txt_tab_maps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAPS"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"/>
                <View
                    android:id="@+id/view_maps"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tab_news"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/txt_tab_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEWS"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"/>
                <View
                    android:id="@+id/view_news"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/listView"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="5dp">
        </ListView>
    </LinearLayout>
</LinearLayout>
